// コメントを追加しました
// このファイルはGitHub MCPサーバーの設定を含んでいます。
// "inputs"セクションは、ユーザーにGitHubトークンを入力させるための設定です。
// "servers"セクションは、GitHub MCPサーバーをDockerコンテナとして実行するための設定です。
{
  "inputs": [
    {
      "type": "promptString",
      "id": "github_token",
      "description": "GitHub Personal Access Token",
      "password": true
    }
  ],
  "servers": {
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github_token}"
      }
    }
  }
}
